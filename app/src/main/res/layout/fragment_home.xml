<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/activity_vertical_margin"
    android:fitsSystemWindows="true"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/activity_vertical_margin"
        android:orientation="horizontal">
        <android.support.v7.widget.AppCompatImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="@dimen/activity_vertical_margin"
            app:srcCompat="@drawable/ic_location"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <android.support.v7.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Location"
                android:gravity="start|center"
                android:textSize="@dimen/text_size_body_small"
                android:textStyle="normal"
                android:textColor="@color/textColorMainLight"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|start"
                android:orientation="horizontal">
                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dakha"
                    android:gravity="start|center"
                    android:textSize="@dimen/text_size_body"
                    android:textStyle="bold"
                    android:layout_marginEnd="@dimen/inner_margin"
                    android:textColor="@color/textColorMain"/>
                <android.support.v7.widget.AppCompatImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="bottom"
                    app:srcCompat="@drawable/ic_expand"/>
            </LinearLayout>
        </LinearLayout>
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/imgv_profile"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="2dp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/ic_default_user"/>
            <android.support.v7.widget.AppCompatTextView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:text="3"
                android:layout_gravity="end|top"
                android:padding="2dp"
                android:textSize="8sp"
                android:gravity="center"
                android:layout_marginStart="@dimen/activity_large_margin"
                android:textColor="@color/textColorWhite"
                android:background="@drawable/bg_follower"/>
        </FrameLayout>
    </LinearLayout>
    <android.support.design.widget.TabLayout
        android:id="@+id/tabLayout"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:tabGravity="fill"
        app:tabIndicatorHeight="0dp"
        app:tabMode="fixed" />
    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/inner_margin"
        android:layout_weight="1"/>
</LinearLayout>