<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/bottom_sheet"
    app:cardBackgroundColor="@color/cardBackgroundColor"
    android:padding="16dp"
    app:behavior_hideable="false"
    app:behavior_peekHeight="90dp"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/activity_horizontal_margin">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/activity_horizontal_margin">
            <android.support.v7.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/inner_margin"
                android:text="Reset"
                android:textColor="@color/textColorPrimary"
                android:textStyle="bold"
                android:textSize="@dimen/text_size_body"/>
            <android.support.v7.widget.AppCompatTextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/inner_margin"
                android:text="Filtered"
                android:gravity="center"
                android:textColor="@color/textColorMain"
                android:textStyle="bold"
                android:textSize="@dimen/text_size_title_h1"/>
            <android.support.v7.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/inner_margin"
                android:text="Cancel"
                android:textColor="@color/textColorPrimary"
                android:textStyle="bold"
                android:textSize="@dimen/text_size_body"/>
        </LinearLayout>
        <android.support.v7.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/inner_margin"
            android:text="Sort By"
            android:gravity="start"
            android:textAllCaps="true"
            android:textColor="@color/textColorMain"
            android:textStyle="normal"
            android:textSize="@dimen/text_size_title_h2"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="@dimen/activity_horizontal_margin"
            android:background="@drawable/bg_sort_by_price"
            android:padding="@dimen/activity_vertical_margin">
            <android.support.v7.widget.AppCompatTextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/inner_margin"
                android:text="Price"
                android:textColor="@color/textColorMainLight"
                android:textStyle="normal"
                android:textSize="@dimen/text_size_body"/>
            <android.support.v7.widget.AppCompatTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="@dimen/inner_margin"
                android:text="$$-$$$$"
                android:textColor="@color/textColorMainLight"
                android:textStyle="bold"
                android:textSize="@dimen/text_size_body"/>
            <android.support.v7.widget.AppCompatImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                app:srcCompat="@drawable/ic_arrow_drop_down"/>
        </LinearLayout>
        <android.support.v7.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/inner_margin"
            android:text="Rating"
            android:textAllCaps="true"
            android:gravity="start"
            android:textColor="@color/textColorMain"
            android:textStyle="normal"
            android:textSize="@dimen/text_size_title_h2"/>
        <android.support.design.chip.ChipGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_horizontal_margin"
            app:chipSpacing="@dimen/activity_horizontal_margin">
            <android.support.design.chip.Chip
                android:id="@+id/chip_none"

                style="@style/CustomChipChoice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="None"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"/>
            <android.support.design.chip.Chip
                android:id="@+id/chip_1star"
                style="@style/CustomChipChoice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:clickable="true"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                app:chipIcon="@drawable/ic_star_unpressed" />
            <android.support.design.chip.Chip
                android:id="@+id/chip_2star"
                style="@style/CustomChipChoice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                app:chipIcon="@drawable/ic_star_unpressed" />
            <android.support.design.chip.Chip
                android:id="@+id/chip_3star"
                style="@style/CustomChipChoice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                android:text="3"
                app:chipIcon="@drawable/ic_star_unpressed" />
            <android.support.design.chip.Chip
                android:id="@+id/chip_4star"
                style="@style/CustomChipChoice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                app:chipIcon="@drawable/ic_star_unpressed" />
            <android.support.design.chip.Chip
                android:id="@+id/chip_5star"
                style="@style/CustomChipChoice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                app:chipIcon="@drawable/ic_star_unpressed" />
        </android.support.design.chip.ChipGroup>
        <android.support.v7.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/inner_margin"
            android:text="Price Rangee"
            android:textAllCaps="true"
            android:gravity="start"
            android:textColor="@color/textColorMain"
            android:textStyle="normal"
            android:textSize="@dimen/text_size_title_h2"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:orientation="horizontal">
            <android.support.v7.widget.AppCompatImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                app:srcCompat="@drawable/ic_tab"/>
            <android.support.v7.widget.AppCompatSeekBar
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:min="50"
                android:max="350"
                android:progress="50"
                android:backgroundTint="@color/colorPrimary"
                android:progressTintMode="add"
                android:progressTint="@color/colorPrimary"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/activity_horizontal_margin">
            <android.support.v7.widget.AppCompatTextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="$90-350"
                android:gravity="start"
                android:textColor="@color/textColorMain"
                android:textStyle="bold"
                android:textSize="@dimen/text_size_body"/>
            <android.support.v7.widget.AppCompatTextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Average $250"
                android:gravity="end"
                android:textColor="@color/textColorMain"
                android:textStyle="bold"
                android:textSize="@dimen/text_size_body"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="@dimen/activity_horizontal_margin">
            <android.support.v7.widget.AppCompatButton
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:text="Filter Now"
                android:layout_marginEnd="@dimen/activity_vertical_margin"
                android:textColor="@color/textColorWhite"
                android:textSize="@dimen/text_size_body_small"
                android:background="@drawable/bg_room_price"/>
            <android.support.v7.widget.AppCompatImageView
                android:layout_width="50dp"
                android:layout_height="36dp"
                android:padding="@dimen/inner_margin"
                app:srcCompat="@drawable/ic_map"
                android:background="@drawable/bg_room_price"/>
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>